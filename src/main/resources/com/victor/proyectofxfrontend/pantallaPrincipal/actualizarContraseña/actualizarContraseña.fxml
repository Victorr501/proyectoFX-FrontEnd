<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.victor.proyectofxfrontend.vista.pantallaPrincipal.centroDinamico.perfil.actualizarContrasena.ActualizarContrasenaController"
            prefHeight="400.0" prefWidth="600.0">

    <VBox spacing="15" alignment="CENTER"  AnchorPane.topAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0">
        <Label text="Cambair Contraseña" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

        <VBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Contraseña actual: "/>
            <PasswordField fx:id="passwordActual" promptText="Introduce tu contraseña actual"/>
        </VBox>

        <VBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Nueva contraseña: "/>
            <PasswordField fx:id="nuevaPassword" promptText="Introduce la nueva contraseña"/>
        </VBox>

        <VBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Repetir nueva contraseña: "/>
            <PasswordField fx:id="repetirPassword" promptText="Repete la nueva contraseña"/>
        </VBox>

        <HBox spacing="20" alignment="CENTER">
            <Button text="Actualizar" onAction="#actualizar"/>
            <Button text="Cancelar" onAction="#cancelar"/>
        </HBox>
    </VBox>

</AnchorPane>
