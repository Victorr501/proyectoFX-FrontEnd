<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns="https://javafx.com/javafx" xmlns:fx="https://javafx.com/fxml"
           fx:controller="com.victor.proyectofxfrontend.vista.registro.RegistroController" stylesheets="@estiloRegistro.css">
    <VBox spacing="20" alignment="CENTER" prefWidth="400" prefHeight="400" style="-fx-padding: 30;" stylesheets="">

        <Label text="Crear cuenta" style="-fx-font-size:20;"/>

        <GridPane hgap="10" vgap="10" alignment="CENTER">
            <Label text="Escribe un nombre:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="usernameField" promptText="Usuario" GridPane.rowIndex="0" GridPane.columnIndex="1" />

            <Label text="Escribe un correo:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="correoField" promptText="Correo" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="Escribe una contrase単a:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <PasswordField fx:id="passwordField" promptText="Contrase単a" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <Label text="Repite la contrase単a:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <PasswordField fx:id="passwordFieldRepetir" promptText="Repite la contrase単a" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
        </GridPane>

        <Button text="Crear cuenta" onAction="#registrarse"/>
        <Button text="Cancelar" onAction="#cancelar"/>

        <Label fx:id="errorLabel" textFill="red" styleClass="error"/>

    </VBox>
</StackPane>


